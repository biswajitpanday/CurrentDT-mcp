{
  "name": "@strix-ai/currentdt-mcp",
  "version": "1.0.0",
  "description": "Current DateTime MCP Server - Provide real-time date and time to AI assistants via Model Context Protocol",
  "author": {
    "name": "Biswajit Panday",
    "email": "biswajitmailid@gmail.com",
    "url": "https://biswajitpanday.github.io"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "datetime",
    "ai-assistant",
    "cursor",
    "claude",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strix-ai/currentdt-mcp.git"
  },
  "homepage": "https://github.com/strix-ai/currentdt-mcp#readme",
  "bugs": {
    "url": "https://github.com/strix-ai/currentdt-mcp/issues"
  },
  "main": "dist/index.js",
  "bin": {
    "currentdt-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "examples/mcp-configs/**/*",
    "currentdt-config.example.json"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepublish": "npm run build",
    "publish:dry": "npm publish --dry-run --access public",
    "publish:prod": "npm publish --access public",
    "pack": "npm pack",
    "docs": "typedoc src/index.ts",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
